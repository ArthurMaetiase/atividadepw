<h1>Autores</h1>

<a href="/autores/add" class="btn btn-success mb-3">Add Livros</a>
<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        <% autores.forEach(autor=> { %>
            <tr>
                <td>
                    <%= autor.id %>
                </td>
                <td>
                    <%= autor.nome %>
                </td>
                <td>
                    <a href="/autores/edit/<%= autor.id %>" class="btn btn-primary btn-sm">Editar</a>
                    <form action="/autores/delete/<%= autor.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>

            <% }) %>
    </tbody>
</table>