<h1>Livros</h1>

<a href="/livros/add" class="btn btn-success mb-3">Add Livros</a>
<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>Titulo</th>
            <th>Tema</th>
            <th>Autor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% livros.forEach(livro=> { %>
            <tr>
                <td>
                    <%= livro.id %>
                </td>
                <td>
                    <%= livro.titulo %>
                </td>
                <td>
                    <%= livro.tema %>
                </td>
                <td>
                    <%= livro.Autor.nome %>
                </td>
                <td>
                    <a href="/livros/edit/<%= livro.id %>" class="btn btn-primary btn-sm">Editar</a>
                    <form action="/livros/delete/<%= livro.id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>

            <% }) %>
    </tbody>
</table>